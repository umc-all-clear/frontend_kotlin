<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/item_list_content_iv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/item_list_content_main_tv"
        app:layout_constraintHorizontal_weight="0.5"
        android:src="@drawable/ic_launcher_background">
    </ImageView>
    <TextView
        android:id="@+id/item_list_content_main_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/item_list_content_iv"
        app:layout_constraintRight_toLeftOf="@id/item_list_content_time_tv"
        app:layout_constraintHorizontal_weight="8"
        android:text="오늘 신청한 청소에 대한 피드백이 도착하였습니다.">
    </TextView>
    <TextView
        android:id="@+id/item_list_content_time_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/item_list_content_main_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_weight="1.5"
        android:text="22시간 전">
    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>