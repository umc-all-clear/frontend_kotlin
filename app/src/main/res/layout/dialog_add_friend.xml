<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f8f8fa">
    <ProgressBar
        android:id="@+id/dialog_add_friend_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone">
    </ProgressBar>
    <TextView
        android:id="@+id/dialog_add_friend_mymail_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/dialog_add_friend_mymail_cv"
        android:text="내 이메일"
        android:layout_marginBottom="14dp">
    </TextView>
    <androidx.cardview.widget.CardView
        android:id="@+id/dialog_add_friend_mymail_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dialog_add_friend_mymail_title_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/dialog_add_friend_mail_title_tv"
        app:cardCornerRadius="20dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dialog_add_friend_mymail_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/dialog_add_friend_mymail_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="user@example.com"
                android:textSize="17dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp">
            </TextView>
            <ImageView
                android:id="@+id/dialog_add_friend_mymail_dup_iv"
                android:layout_width="100dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/dialog_add_friend_dup">
            </ImageView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/dialog_add_friend_mail_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dialog_add_friend_mymail_cv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/dialog_add_friend_mail_cv"
        android:text="친구 이메일"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="14dp">
    </TextView>
    <androidx.cardview.widget.CardView
        android:id="@+id/dialog_add_friend_mail_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dialog_add_friend_mail_title_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/dialog_add_friend_profile_content_cv"
        app:cardCornerRadius="20dp"
        android:layout_marginBottom="20dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dialog_add_friend_mail_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp">
            <EditText
                android:id="@+id/dialog_add_friend_mail_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintRight_toLeftOf="@id/dialog_add_friend_mail_search_iv"
                android:inputType="text"
                android:textSize="16dp"
                android:hint="친구의 이메일을 입력하세요"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_edittext"
                app:layout_constrainedWidth="true">
            </EditText>
            <ImageView
                android:id="@+id/dialog_add_friend_mail_search_iv"
                android:layout_width="100dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/dialog_add_friend_mail_et"
                android:src="@drawable/dialog_add_friend_search"
                android:visibility="gone">
            </ImageView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/dialog_add_friend_profile_content_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dialog_add_friend_mail_cv"
        app:layout_constraintBottom_toTopOf="@id/dialog_add_friend_cancel_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardCornerRadius="60dp"
        android:visibility="gone">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/dialog_add_friend_profile_content_img_cv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/dialog_add_friend_profile_content_mail_tv"
                app:cardCornerRadius="100dp">
                <ImageView
                    android:id="@+id/dialog_add_friend_profile_content_img_iv"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/fragment_admission_profile">
                </ImageView>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/dialog_add_friend_profile_content_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/dialog_add_friend_profile_content_img_cv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@id/dialog_add_friend_profile_content_mail_tv"
                app:layout_constraintBottom_toTopOf="@id/dialog_add_friend_profile_content_mail_tv"
                android:text="username"
                android:textSize="17dp"
                app:layout_constraintVertical_chainStyle="packed">
            </TextView>
            <TextView
                android:id="@+id/dialog_add_friend_profile_content_mail_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/dialog_add_friend_profile_content_name_tv"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/dialog_add_friend_profile_content_img_cv"
                android:text="user@example.com"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintVertical_chainStyle="packed">
            </TextView>
            <ImageView
                android:id="@+id/dialog_add_friend_profile_content_check_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/dialog_add_friend_check"
                android:visibility="gone">
            </ImageView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/dialog_add_friend_cancel_tv"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/dialog_add_friend_profile_content_cv"
            app:layout_constraintRight_toLeftOf="@id/dialog_add_friend_add_tv"
            app:layout_constraintBottom_toTopOf="@id/dialog_add_friend_des_tv"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:gravity="center"
            android:background="@drawable/item_gray_boarder"
            android:textSize="13dp"
            android:text="취소"
            android:textColor="#999999"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:visibility="gone">
        </TextView>
        <TextView
            android:id="@+id/dialog_add_friend_add_tv"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/dialog_add_friend_cancel_tv"
            app:layout_constraintBottom_toBottomOf="@id/dialog_add_friend_cancel_tv"
            android:text="추가하기"
            android:textSize="13dp"
            android:textColor="#007aff"
            android:gravity="center"
            android:background="@drawable/item_blue_boarder"
            android:visibility="gone">
        </TextView>
    <TextView
        android:id="@+id/dialog_add_friend_des_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dialog_add_friend_cancel_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:visibility="gone">
    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>