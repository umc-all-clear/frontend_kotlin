<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/signin_go_back_iv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/signin_email_tv"
        app:layout_constraintRight_toLeftOf="@id/signin_title_tv"
        app:layout_constraintVertical_weight="1"
        android:src="@drawable/ic_launcher_background">
    </ImageView>
    <TextView
        android:id="@+id/signin_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/signin_go_back_iv"
        app:layout_constraintTop_toTopOf="parent"
        android:text="회원가입"
        android:textSize="23dp">
    </TextView>

    <TextView
        android:id="@+id/signin_email_tv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/signin_go_back_iv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/signin_email_et"
        app:layout_constraintVertical_weight="1"
        android:gravity="bottom"
        android:text="이메일">
    </TextView>
    <EditText
        android:id="@+id/signin_email_et"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/signin_email_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/signin_pw_tv"
        app:layout_constraintVertical_weight="1">
    </EditText>
    <TextView
        android:id="@+id/signin_pw_tv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signin_email_et"
        app:layout_constraintBottom_toTopOf="@id/signin_pw_et"
        app:layout_constraintVertical_weight="1"
        android:gravity="bottom"
        android:text="비밀번호">
    </TextView>
    <EditText
        android:id="@+id/signin_pw_et"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signin_pw_tv"
        app:layout_constraintBottom_toTopOf="@id/signin_pw_confirm_tv"
        app:layout_constraintVertical_weight="1">
    </EditText>
    <TextView
        android:id="@+id/signin_pw_confirm_tv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signin_pw_et"
        app:layout_constraintBottom_toTopOf="@id/signin_pw_confirm_et"
        app:layout_constraintVertical_weight="1"
        android:gravity="bottom"
        android:text="비밀변호 확인">
    </TextView>
    <EditText
        android:id="@+id/signin_pw_confirm_et"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signin_pw_confirm_tv"
        app:layout_constraintBottom_toTopOf="@id/signin_id_tv"
        app:layout_constraintVertical_weight="1">
    </EditText>
    <TextView
        android:id="@+id/signin_id_tv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signin_pw_confirm_et"
        app:layout_constraintBottom_toTopOf="@id/signin_id_et"
        app:layout_constraintVertical_weight="1"
        android:gravity="bottom"
        android:text="아이디">
    </TextView>
    <EditText
        android:id="@+id/signin_id_et"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signin_id_tv"
        app:layout_constraintBottom_toTopOf="@id/signin_top_bottom_sp"
        app:layout_constraintVertical_weight="1">
    </EditText>
    <Space
        android:id="@+id/signin_top_bottom_sp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/signin_id_et"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_weight="5">
    </Space>
    <Space
        android:id="@+id/signin_bottom_top_sp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/signin_go_signin_tv"
        app:layout_constraintRight_toRightOf="parent">
    </Space>
    <TextView
        android:id="@+id/signin_go_signin_tv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/signin_bottom_bottom_sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signin_bottom_top_sp"
        android:text="회원가입"
        android:gravity="center"
        app:layout_constraintVertical_weight="0.8">
    </TextView>
    <Space
        android:id="@+id/signin_bottom_bottom_sp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintTop_toBottomOf="@id/signin_go_signin_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </Space>
</androidx.constraintlayout.widget.ConstraintLayout>