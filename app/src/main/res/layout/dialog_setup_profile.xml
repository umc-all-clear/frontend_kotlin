<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/dialog_profile_content_cv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/dialog_profile_cancel_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/dialog_profile_content_img_cv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/dialog_profile_content_name_tv">
                    <ImageView
                        android:id="@+id/dialog_profile_content_img_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </ImageView>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/dialog_profile_content_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/dialog_profile_content_img_cv"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/dialog_profile_content_mail_tv"
                    app:layout_constraintRight_toLeftOf="@id/dialog_profile_content_edit_iv">
                </TextView>
                <TextView
                    android:id="@+id/dialog_profile_content_mail_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/dialog_profile_content_name_tv"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/dialog_profile_content_img_cv"
                    app:layout_constraintRight_toLeftOf="@id/dialog_profile_content_edit_iv">
                </TextView>
                <ImageView
                    android:id="@+id/dialog_profile_content_edit_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/dialog_profile_content_name_tv"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent">
                </ImageView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/dialog_profile_cancel_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dialog_profile_content_cv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/dialog_profile_confirm_tv"
        android:text="취소"
        app:layout_constraintHorizontal_chainStyle="packed">
    </TextView>
    <TextView
        android:id="@+id/dialog_profile_confirm_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dialog_profile_content_cv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/dialog_profile_cancel_tv"
        app:layout_constraintRight_toRightOf="parent"
        android:text="로그아웃"
        app:layout_constraintHorizontal_chainStyle="packed">
    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>