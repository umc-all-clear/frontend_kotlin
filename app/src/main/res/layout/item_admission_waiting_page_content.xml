<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/item_waiting_content_cv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:cardCornerRadius="60dp"
        android:elevation="10dp"
        android:layout_margin="5dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_waiting_content_cl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/item_waiting_content_profile_cv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/item_waiting_content_time_des_tv">
            <ImageView
                android:id="@+id/item_waiting_content_profile_iv"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/fragment_admission_profile">
            </ImageView>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/item_waiting_content_time_des_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/item_waiting_content_profile_cv"
            app:layout_constraintBottom_toTopOf="@id/item_waiting_content_des_tv"
            android:text="hh:mm에 신청한 사진"
            android:textSize="17dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintVertical_chainStyle="packed">
        </TextView>
        <TextView
            android:id="@+id/item_waiting_content_des_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/item_waiting_content_time_des_tv"
            app:layout_constraintStart_toStartOf="@id/item_waiting_content_time_des_tv"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="눌러서 상세정보 보기"
            android:textSize="13dp"
            android:textColor="#999999"
            app:layout_constraintVertical_chainStyle="packed">
        </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>