<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent">
    <TextView
        android:id="@+id/item_fri_rank_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/item_fri_des_cv"
        android:text="n"
        android:textSize="23dp"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center"
        app:layout_constraintHorizontal_weight="2">
    </TextView>
    <androidx.cardview.widget.CardView
        android:id="@+id/item_fri_des_cv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/item_fri_rank_tv"
        app:layout_constraintRight_toLeftOf="@id/item_fri_down_sp"
        app:cardCornerRadius="60dp"
        app:layout_constraintHorizontal_weight="11"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_fri_des_cl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="10dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/item_fri_des_profile_cv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/item_fri_mail_tv"
                app:cardCornerRadius="100dp">
                <ImageView
                    android:id="@+id/item_fri_des_profile_iv"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/fragment_admission_profile">
                </ImageView>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/item_fri_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/item_fri_des_profile_cv"
                app:layout_constraintStart_toStartOf="@id/item_fri_mail_tv"
                android:text="name"
                android:fontFamily="@font/roboto_regular"
                android:textSize="23dp">
            </TextView>
            <TextView
                android:id="@+id/item_fri_mail_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/item_fri_name_tv"
                app:layout_constraintLeft_toRightOf="@id/item_fri_des_profile_cv"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="15dp"
                android:text="name@gmail.com"
                android:fontFamily="@font/roboto_regular"
                android:textSize="12dp">
            </TextView>
            <TextView
                android:id="@+id/item_fri_rate_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toLeftOf="@id/item_fri_rate_iv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="0.0"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginRight="3dp">
            </TextView>
            <ImageView
                android:id="@+id/item_fri_rate_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/item_rate_star_one"
                android:layout_marginRight="10dp">
            </ImageView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <Space
        android:id="@+id/item_fri_down_sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/item_fri_des_cv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="1">
    </Space>
    <Space
        android:id="@+id/item_fri_up_left_sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/item_fri_check_iv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="12.5">
    </Space>
    <ImageView
        android:id="@+id/item_fri_check_iv"
        android:layout_width="0dp"
        android:layout_height="25dp"
        app:layout_constraintRight_toLeftOf="@id/item_fri_up_right_sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/item_fri_up_left_sp"
        android:layout_marginRight="-10dp"
        android:src="@drawable/dialog_add_friend_check"
        android:elevation="2dp"
        app:layout_constraintHorizontal_weight="1"
        android:visibility="gone">
    </ImageView>
    <Space
        android:id="@+id/item_fri_up_right_sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/item_fri_check_iv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="0.5">
    </Space>
</androidx.constraintlayout.widget.ConstraintLayout>