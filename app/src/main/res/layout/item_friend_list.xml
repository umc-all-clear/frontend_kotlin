<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent">
    <TextView
        android:id="@+id/item_fri_rank_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/item_fri_des_cv"
        android:text="n"
        app:layout_constraintHorizontal_weight="2">
    </TextView>
    <androidx.cardview.widget.CardView
        android:id="@+id/item_fri_des_cv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/item_fri_rank_tv"
        app:layout_constraintRight_toLeftOf="@id/item_fri_down_sp"
        app:cardCornerRadius="60dp"
        app:layout_constraintHorizontal_weight="11">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_fri_des_cl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <androidx.cardview.widget.CardView
                android:id="@+id/item_fri_des_profile_cv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/item_fri_mail_tv">
                <ImageView
                    android:id="@+id/item_fri_des_profile_iv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_launcher_background">
                </ImageView>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/item_fri_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/item_fri_des_profile_cv"
                app:layout_constraintRight_toLeftOf="@id/item_fri_rate_tv"
                app:layout_constraintBottom_toTopOf="@id/item_fri_mail_tv"
                android:text="name">
            </TextView>
            <TextView
                android:id="@+id/item_fri_mail_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/item_fri_name_tv"
                app:layout_constraintLeft_toRightOf="@id/item_fri_des_profile_cv"
                app:layout_constraintRight_toLeftOf="@id/item_fri_rate_tv"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="name@gmail.com">
            </TextView>
            <TextView
                android:id="@+id/item_fri_rate_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/item_fri_name_tv"
                app:layout_constraintRight_toLeftOf="@id/item_fri_rate_iv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="0.0">
            </TextView>
            <ImageView
                android:id="@+id/item_fri_rate_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/item_fri_rate_tv"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/ic_launcher_background">
            </ImageView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <Space
        android:id="@+id/item_fri_down_sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/item_fri_des_cv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="1">
    </Space>
    <Space
        android:id="@+id/item_fri_up_left_sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/item_fri_check_iv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="12.5">
    </Space>
    <ImageView
        android:id="@+id/item_fri_check_iv"
        android:layout_width="0dp"
        android:layout_height="20dp"
        app:layout_constraintRight_toLeftOf="@id/item_fri_up_right_sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/item_fri_up_left_sp"
        android:layout_marginRight="-10dp"
        android:src="@drawable/ic_launcher_background"
        android:elevation="2dp"
        app:layout_constraintHorizontal_weight="1">
    </ImageView>
    <Space
        android:id="@+id/item_fri_up_right_sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/item_fri_check_iv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="0.5">
    </Space>
</androidx.constraintlayout.widget.ConstraintLayout>